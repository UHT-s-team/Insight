<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.UHT.Insight.dao.GameDayInfoDao">
       <select id="findGameDayInfoAll" resultType="com.UHT.Insight.dto.GameDayInfo">
           select * from GameDayInfo
       </select>
       <select id="findGameDayInfoByDay" resultType="com.UHT.Insight.dto.GameDayInfo" parameterType="Date">
           select * from GameDayInfo where ITime=#{time}
       </select>
       <delete id="deleteGameDayInfoByDay" parameterType="Date">
           delete from GameDayInfo where ITime=#{time}
       </delete>
       <update id="updateGameDayInfoByOne" parameterType="com.UHT.Insight.dto.GameDayInfo">
           update GameDayInfo
           set num=#{num},average=#{average},OneStarNum=#{OneStarNum},TowStarNum=#{TowStarNum},ThreeStarNum=#{ThreeStarNum},FourStarNum=#{FourStarNum},FiveStarNum=#{FiveStarNum}
            where ITime=#{time}
       </update>
       <update id="updateGameDayInfoByList" parameterType="List">
           update GameDayInfo
           <foreach collection="list" item="gameDayInfo" separator=",">
           set num=#{gameDayInfo.num},average=#{gameDayInfo.average},OneStarNum=#{gameDayInfo.OneStarNum},TowStarNum=#{gameDayInfo.TowStarNum}
           ,ThreeStarNum=#{gameDayInfo.ThreeStarNum},FourStarNum=#{gameDayInfo.FourStarNum},FiveStarNum=#{gameDayInfo.FiveStarNum}
            where ITime=#{gameDayInfo.time}
       </foreach>
       </update>
        <insert id="saveGameDayInfoByOne" parameterType="com.UHT.Insight.dto.GameDayInfo">
            insert  into GameDayInfo(ITime,num,average,OneStarNum,TowStarNum,ThreeStarNum,FourStarNum,FiveStarNum)
            values (#{time},#{num},#{average},#{OneStarNum},#{TowStarNum},#{ThreeStarNum},#{FourStarNum},#{FiveStarNum})
        </insert>
        <insert id="saveGameDayInfoByList" parameterType="List">
            insert  into GameDayInfo(ITime,num,average,OneStarNum,TowStarNum,ThreeStarNum,FourStarNum,FiveStarNum)
            <foreach collection="list" separator="," item="gameDayInfo">
            values (#{gameDayInfo.time},#{gameDayInfo.num},#{gameDayInfo.average},#{gameDayInfo.OneStarNum},#{gameDayInfo.TowStarNum}
            ,#{gameDayInfo.ThreeStarNum},#{gameDayInfo.FourStarNum},#{gameDayInfo.FiveStarNum})
            </foreach>
        </insert>
</mapper>